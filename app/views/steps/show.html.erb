<br/>
<%= render 'layouts/navfront' %>

<% if current_admin_user %>
  <p>
    <strong>Completed:</strong>
    <%= @step.completed %>
  </p>
  <%= link_to 'Edit', edit_step_path(@step) %> |
  <%= link_to 'Back', steps_path %>
<% end %>
<div class="row">
  <div class="col-md-9">
    <img src="http://placehold.it/1140x600" class="rounded8 img-responsive" alt="...">
    <h1><%= @step.name %></h1><br/>

<br/>

<ul class="nav nav-tabs">
  <li class="active"><a href="#notes" data-toggle="tab">Lesson Notes</a></li>
  <li><a href="#reference" data-toggle="tab">Reference</a></li>
  <li><a href="#transcript" data-toggle="tab">Transcript</a></li>
  <li><a href="#support" data-toggle="tab">Q & A</a></li>
  
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="notes">
    <div class="row">
      <div class="col-md-12"><br/>
    <p class="desc">
  <strong>Description:</strong>&nbsp;
  <%= @step.description %>
    </p>
  </div>
</div>
</div>
  <div class="tab-pane" id="reference">
    <div class="row">
      <div class="col-md-12">
        <p class="desc"><strong>Description:</strong>&nbsp;Reference</p>
      </div>
    </div>

  </div>
  <div class="tab-pane" id="support">
    <div class="row">
      <div class="col-md-12">

        <div id="disqus_thread"></div>

        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'epicstemeu'; // required: replace example with your forum shortname

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

        <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
        
      </div>
    </div>

  </div>
  <div class="tab-pane" id="transcript">
    <div class="row">
      <div class="col-md-12">
        <p class="desc"><strong>Description:</strong>&nbsp;Transcript</p>
      </div>
    </div>
  </div>
  
</div>
</div>
<div class="col-md-3">
  </div>
</div>
<script type="text/javascript">
  $('#notes a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')
})
  $('#support a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')
})
  $('#reference a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')
})
  $('#transcript a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')
})
</script>

