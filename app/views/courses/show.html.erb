<%= render 'layouts/navfront' %>

<% if current_admin_user %><%= link_to 'Edit', edit_course_path(@course), :class => "btn btn-primary btn-lg" %><% end %>
<!--<%= link_to 'Back', courses_path %>-->


<div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-3">
          <img src="http://placehold.it/200x200" class="rounded8 img-responsive" alt="...">
        </div>
        <div class="col-md-9">
          <h3 class="panel-title"><%= link_to @course.name, @course %></h3>
          <p class="desc"><%= @course.description %></p>
          <!--<p><%= @course.completed %></p>-->
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <!--<div class="col-md-3">
          <%= link_to @course, :class => "btn btn-primary btn-lg" do %>
          Get Started
          <i class="fa fa-chevron-right"></i>
          <% end %>
        </div>-->
        <div class="col-md-3">
        	<a href="#" class="btn btn-primary btn-lg">Continue&nbsp;<i class="fa fa-chevron-right"></i></a>
        </div>
        <div class="col-md-9">
        <div class="note"><strong>Progress:</strong> 60%</div>
        
        <div class="progress progress-striped">
          <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
            <span class="sr-only">60% Complete (warning)</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
 <div class="table-responsive">
        <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Completed</th>
            <th>Course ID</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @course.steps.each do |step| %>
            <tr>
              <td><%= step.name %></td>
              <td class="desc"><%= step.description %></td>
              <td><%= step.completed %></td>
              <td><%= step.course_id %></td>
              <% if current_admin_user %>
              <td class="twoh"><%= link_to step, :class => "btn btn-default" do %>
                    <i class="fa fa-search"></i>&nbsp; View
                  <% end %>&nbsp;
              <%= link_to edit_step_path(step), :class => "btn btn-default" do %>
                    <i class="fa fa-edit"></i>&nbsp; Edit
                  <% end %>&nbsp;
             <%= link_to step, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-danger" do %>
                    <i class="fa fa-trash-o"></i>&nbsp; Delete
                  <% end %></td>
                  <% else %>
                  <td class="oneh"><%= link_to step, :class => "btn btn-default" do %>
                    <i class="fa fa-search"></i>&nbsp; View
                  <% end %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
