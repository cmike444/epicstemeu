<% @courses.each do |course| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-3">
          <img src="http://placehold.it/200x200" class="rounded8 img-responsive" alt="...">
        </div>
        <div class="col-md-9">
          <h3 class="panel-title"><%= link_to course.name, course %></h3>
          <p class="desc"><%= course.description %></p>
          <!--<p><%= course.completed %></p>-->
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-6">
          <%= link_to course, :class => "btn btn-primary btn-lg" do %>
          Get Started
          <i class="fa fa-chevron-right"></i>
          <% end %>&nbsp;
          <%= link_to course, :class => "btn btn-default btn-lg" do %>
          <i class="fa fa-youtube-play"></i>&nbsp;
          Watch Trailer
          <% end %>
          <%= link_to course, :class => "btn btn-default btn-lg" do %>
          <i class="fa fa-list"></i>&nbsp;
          View Transcript
          <% end %>
        </div>
        <div class="col-md-6">
        <div class="note"><strong>Progress:</strong> 60%</div>
        
        <div class="progress progress-striped">
          <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
            <span class="sr-only">60% Complete (warning)</span>
          </div>
        </div>
      </div>

      </div>
    </div>
  </div>
<% end %>

   